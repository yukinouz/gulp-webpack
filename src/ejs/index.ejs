    </section><!-- /.c-modal -->
  
    <section id="a-menu3" class="c-gallery l-sec">
      <div class="l-inner">
        <ul class="c-gallery__lists">
          <li class="c-gallery__main c-gallery__main--01 js-mainGallery is_active"></li>
          <li class="c-gallery__main c-gallery__main--02 js-mainGallery"></li>
          <li class="c-gallery__main c-gallery__main--03 js-mainGallery"></li>
        </ul><!-- c-gallery-list -->
        <div class="c-gallery__thumbnail">
          <ul class="c-gallery__thumbnail-lists">
            <li class="c-gallery__thumbnail-list c-gallery__thumbnail-list--01 js-thumbnail is_selected"></li>
            <li class="c-gallery__thumbnail-list c-gallery__thumbnail-list--02 js-thumbnail"></li>
            <li class="c-gallery__thumbnail-list c-gallery__thumbnail-list--03 js-thumbnail"></li>
          </ul>
