<% 
const metaInfo = {
  title: 'トップページのタイトル',
  description: 'トップページのディスクリプション',
  path: './'
}
%>

<%- include(metaInfo.path + 'common/_header', {metaInfo: metaInfo} ); %>

  <!-- loading画面 -->
  <div id="js-loader" class="loader"></div>

  <main class="u-body-spacing">
